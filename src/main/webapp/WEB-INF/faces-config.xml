<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<managed-bean>
		<managed-bean-name>requestBean</managed-bean-name>
		<managed-bean-class>com.arnoldclark.beans.RequestBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<application>
		<resource-bundle>
			<base-name>com.arnoldclark.resources.bundles.appbundle</base-name>
			<var>appbundle</var>
		</resource-bundle>
		<message-bundle>com.arnoldclark.resources.bundles.appbundle</message-bundle>
	</application>

</faces-config>